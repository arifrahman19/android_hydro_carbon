<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.advinity.carbonteam.hydrocarbon.fragment.QuizFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="12dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lingkup Soal"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="@color/colorTitle"
                    android:layout_marginBottom="12dp"/>

                <Spinner
                    android:id="@+id/quiz_range_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    android:layout_marginBottom="12dp" />

            </LinearLayout>

            <ImageView
                android:layout_width="12dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:src="@drawable/bg_description_detail"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="12dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/quiz_sum_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jumlah Soal"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="@color/colorTitle"
                    android:layout_marginBottom="14dp"/>

                <SeekBar
                    android:id="@+id/quiz_sum_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp" />

            </LinearLayout>

            <ImageView
                android:layout_width="12dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:src="@drawable/bg_description_detail"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="12dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/quiz_time_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Waktu"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="@color/colorTitle"
                    android:layout_marginBottom="14dp"/>

                <SeekBar
                    android:id="@+id/quiz_time_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp" />

            </LinearLayout>

            <ImageView
                android:layout_width="12dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:src="@drawable/bg_description_detail"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
